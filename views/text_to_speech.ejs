    <div class="col-lg-12 col-md-12 mt-3 mb-4">
      <div class="card">
          <div class="card-header">
              <h3 class="display-4" style="font-size: 2em;">Type Something</h3>
          </div>
          <div class="card-body">
              <div class="input-single">
                <textarea class="form-control" id="text"></textarea>
              </div><br>
              <div class="form-group">
                <label class="form-label" for="speed">Speed</label>
                <input class="form-control" type="number" name="spee" id="speed" min=".5" max="3" step=".5" value="1">
              </div><br>
              <button class="btn btn-md btn-outline-success" id="play-button">Play</button>
              <button class="btn btn-md btn-outline-secondary" id="pause-button">Pause</button>
              <button class="btn btn-md btn-outline-danger" id="stop-button">Stop</button>
          </div>
          <div class="card-footer">
            <button onclick="location.href = '/home';" id="myButton" style="border-radius: 30px;" class="btn btn-outline-secondary" >Home page</button>
          </div>
      </div>
  </div>

  </div>
